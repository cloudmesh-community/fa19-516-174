version: '3'
services:
  imageclassification:
    build: ./imageclassification
    ports:
      - "5000:5000"
    links:
      - db

  meanshift:
    build: ../sample/meanshift
    ports:
      - "5000:5000"
    links:
      - db

  mongodb:
    image: mongo:latest
    container_name : "mongodb"
    environment:
      -- MONGO_DATA_DIR=/usr/data/db
      - MONGO_LOG_DIR=/dev/null
      volumes:
        - ./data/db:/usr/data/db
      ports:
        - 27017:27017
      command: mongod --smallfiles --logpath=/dev/null # --quiet

  db:
    build: ./db
